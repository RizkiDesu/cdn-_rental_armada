<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- adi -->
        <record id="cdn_armada_view_tree" model="ir.ui.view">
            <field name="name">Armada</field>
            <field name="model">cdn.armada</field>
            <field name="arch" type="xml">
                <tree sample="1" decoration-danger="kondisi == False">
                    <field name="jenis_armada"/>
                    <field name="merek_id"/>
                    <field name="jenis_kendaraan"/>
                    <field name="jumlah_kursi"/>
                    <field name="tahun_pembuatan"/>
                    <field name="kondisi" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record id="cdn_armada_view_form" model="ir.ui.view">
            <field name="name">cdn.armada.view.form</field>
            <field name="model">cdn.armada</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                    <div class="oe_button_box" name="button_box"> 
                        <button name="tombol_jenis" type="object" class="oe_stat_button" icon="fa-superpowers" context="{'default_jenis_armada':jenis_armada}">
                            <field name="jenis_armada" readonly="1"/>
                        </button>
                        <button name="tombol_merek_action" type="object" class="oe_stat_button" icon="fa-superpowers">
                            Merek
                        </button>
                        <button name="tombol_service" type="object" class="oe_stat_button" icon="fa-superpowers" context="{'default_armada_id':active_id,'hide_nama_service':1}">
                            <field name="hitung_service" string="Kali Perawatan" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Kondisi Tidak Layak" bg_color="bg-danger" attrs="{'invisible':[('kondisi','=',True)]}" />
                        <group name="data_kendaraan" string="Data Armada">
                        <group>
                            <field name="jenis_armada"/>
                            <field name="merek_id"/>
                            <field name="jenis_kendaraan" context="{'default_merek_id': merek_id}" attrs = "{'readonly':[('merek_id', '=', False)]}"/>
                            <field name="jumlah_kursi"/>
                            <field name="foto_mobil" widget="image"/>
                        </group>
                        <group>
                            <field name="tahun_pembuatan"/>
                            <field name="no_plat"/>
                            <field name="no_mesin"/>
                            <field name="kondisi" help="Jika aktif berarti armada dalam kondisi bagus" widget="boolean_toggle"/>
                            <field name="terakhir_service"/>
                        </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="cdn_armada_action" model="ir.actions.act_window">
            <field name="name">Armada</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.armada</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p><p>
                </p>
            </field>
        </record>
        <menuitem id="armada_menu_action" name="Armada" parent="armada_menu_categ" action="cdn_armada_action" sequence="0"/>
    </data>
</odoo>
