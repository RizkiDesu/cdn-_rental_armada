<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <!-- ian -->
   <data>
      <record id="kontak_form_inherit_view" model="ir.ui.view">
         <field name="name">kontak.form.inherit.view</field>
         <field name="model">res.partner</field>
         <field name="inherit_id" ref="base.view_partner_form"/>
         <field name="priority">10</field>
         <field name="arch" type="xml">
            <!-- field tambahan -->
            <xpath expr="//span[@name='address_name']" position="before">
                  <field name="pekerjaan" readonly="1" force_save="1"/>
                  <field name="jenis_kelamin"/>
                  <field name="no_ktp"/>
                  <field name="umur"/>
                  <field name="is_menikah" widget="boolean_toggle"/>
                  <field name="status"/>
            </xpath>
            <!-- untuk menghilangkan autofocus pada contact_addresses supaya page sim menjadi autofocus -->
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
               <attribute name="autofocus">false</attribute>
            </xpath>
            <!-- page field sim -->
            <xpath expr="//page[@name='contact_addresses']" position="before">
               <page string="Sim Armada" autofocus="autofocus">
                  <field name="sim_line">
                     <tree editable='bottom'>
                        <field name="no_sim"/>
                        <field name="jenis_sim"/>
                        <field name="foto_sim" widget="image" class="oe_avatar"/>
                     </tree>
                  </field>
               </page>
            </xpath>
         </field>
      </record>
   
   </data>

</odoo>
