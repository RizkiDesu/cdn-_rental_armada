<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="product_product_inherit_rental" model="ir.ui.view">
            <field name="name">product.product.rental.view.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tooltip']" position="after">    
                    <field name="jenis_armada"/>
                </xpath>
                <xpath expr="//field[@name='detailed_type']" position="attributes">    
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="varian_action" model="ir.actions.act_window">
            <field name="name">Produk</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="context">{'default_detailed_type': 'service'}</field>
            <field name="domain">[('detailed_type','=','service')]</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p><p>
                </p>
            </field>
        </record>
        <menuitem id="varian_menu_action" name="Produk" parent="product_menu_categ" action="varian_action" sequence="10"/>
    </data>
    
</odoo>